<h3>Categories</h3>
	<ul id="categories">
	{% with active_categories as cats %}
	{% for name, link in cats %}
	<li>
		{% ifequal link request_path %}
		{{ name }}<br />
		{% else %}
		<a href="{{ link }}" class="category">{{ name }}</a><br />
		{% endifequal %}
	</li>
	{% endfor %}
	{% endwith %}
</ul>
